[
  {
    "label": "Run current Python file",
    "command": "python",
    "args": ["${file}"],
    "env": {},
    "cwd": "${workspaceFolder}",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  },
  {
    "label": "Run current Go file",
    "command": "go",
    "args": ["run", "${file}"],
    "env": {},
    "cwd": "${workspaceFolder}",
    "use_new_terminal": false,
    "allow_concurrent_runs": false,
    "reveal": "always",
    "hide": "never",
    "shell": "system"
  }
]
